<h1>Home Page</h1>

<fieldset>
    <legend>{{selectedHotel.title}}</legend>
    <p>{{selectedHotel.location}}</p>
    <img class="hotelImg" src="{{selectedHotel.image}}" alt="hotel image">   
    <p>{{selectedHotel.description}}</p>
<div>   
        {{#if currentUser}}
        <a  href="like/{{selectedHotel._id}}"><img class="likeBtn" src="/img/like-button-png-2.png" alt="like"></a>
        {{else}}
        <img class="likeBtn" src="/img/like-button-png-2.png" alt="like">
        {{/if}}
        <span>{{selectedHotel.prop}}</span>
        <p>{{selectedHotel.viewCounter}}</p>
</div>



</fieldset>


<h1>Comments</h1>
<br>
<br>

{{#if currentUser}}
{{#if currentUser.notBlocked}}
<div class="login-page">
    <div class="form">
        <form action="/comment/{{selectedHotel._id}}" method="POST" class="create-form">
            <input type="text" name='title' placeholder="Title" />
            <textarea name="comment" id="" cols="35" rows="10" placeholder="comment"></textarea>
            <br>
            
            <button type="submit">create</button>
        </form>
    </div>
</div>
{{else}}
<h1>U are blocked from commenting</h1>
{{/if}}
{{/if}}


{{#each comments}}
<fieldset>
    <legend>
        <a href="/getDetails/{{this.creator}}"><p>{{this.userName}}</p></a>
    </legend>
    <p>{{this.userTitle}}</p>
    <p>{{this.userComment}}</p>
    <p>{{this.datePosted}}</p>
</fieldset>
{{/each}}